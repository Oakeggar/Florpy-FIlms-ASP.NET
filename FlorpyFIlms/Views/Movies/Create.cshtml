@model Movie

@{
	ViewData["Title"] = "Add a new movie";
}

<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1>Add a new movie</h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
				<form asp-action="Create">
					<div asp-validation-summery="ModelOnly" class="text-danger"></div>
				
				<div class="form-group">
					<label asp-for="FilmPictureURL" class="control-label"></label>
					<input asp-for="FilmPictureURL" class="form-control" />
					<span asp-validation-for="FilmPictureURL" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="FilmName" class="control-label"></label>
					<input asp-for="FilmName" class="form-control" />
					<span asp-validation-for="FilmName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="FilmPrice" class="control-label"></label>
					<input asp-for="FilmPrice" class="form-control" />
					<span asp-validation-for="FilmPrice" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="FilmCategory" class="control-label"></label>
					<input asp-for="FilmCategory" class="form-control" />
					<span asp-validation-for="FilmCategory" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="FilmDescr" class="control-label"></label>
					<input asp-for="FilmDescr" class="form-control" />
					<span asp-validation-for="FilmDescr" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-outline-success float-right"/>
				</div>
				</form>
			</div>
		</div>
	</div>
</div>
