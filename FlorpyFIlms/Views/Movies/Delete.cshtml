@model Movie

@{
	ViewData["Title"] = "Delete movie";
}

<div class="row text">
	<div class="col-md-12">
		<p>
			<h1>Delete confirmation @Model.FilmName</h1>
		</p>
		<div class="row">
			<div class="col-md-6">
			<div class="form-group">
					<img src="@Model.FilmPictureURL" width="80%" alt="@Model.FilmName"/>
			</div>
			</div>
			<div class="col-md-6">
					
					<div class="form-group">
						<label asp-for="FilmName" class="control-label"></label>
					<input asp-for="FilmName" class="form-control" readonly />
						<span asp-validation-for="FilmName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="FilmPrice" class="control-label"></label>
					<input asp-for="FilmPrice" class="form-control" readonly />
						<span asp-validation-for="FilmPrice" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="FilmCategory" class="control-label"></label>
					<input asp-for="FilmCategory" class="form-control" readonly />
						<span asp-validation-for="FilmCategory" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="FilmDescr" class="control-label"></label>
					<input asp-for="FilmDescr" class="form-control" readonly />
						<span asp-validation-for="FilmDescr" class="text-danger"></span>
					</div>

					<div class="form-group">
					<form asp-action="DeleteConfirmed">
						<input type="hidden" asp-for="Id"/>
						<input type="submit" value="Confirm" class="btn btn-danger float-right" />
					</form>
					</div>
			</div>
		</div>
	</div>
</div>

