@model IEnumerable<Movie>

@{
	ViewData["Title"] = "List of Movies";
}

<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-md-4 col-xs-4 border-primary mb-3">
			<div class="card mb-3" style="max-width:540px">
				<div class="row g-0">
					<div class="col-md-12">
						<div class="card-header text-white bg-info">
							<p class="card-text">
								<h5 class="card-title">
									@item.FilmName
									<a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
								</h5>
							</p>
						</div>
					</div>
					<div class="col-md-12">
						<img src="@item.FilmPictureURL" width="100%" alt="@item.FilmName">
					</div>
					<div class="col-md-12">
						<div class="card-footer">
							<p class="card-text">
								<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencile-square">Edit</i></a> |
								<a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eyel">Details</i></a> |
								<a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash">Delete</i></a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>